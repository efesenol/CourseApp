@model Candidate


<div class="displat-6">
    Apply
</div>

<form method="post" asp-action="Apply">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-2">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control">
    </div>
    <div class="form-group my-2">
        <label asp-for="Age"></label>
        <select asp-for="Age" class="form-control">
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>


    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.Net Core MVC " checked>
            <label >ASP.Net Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse" value="ASP.Net Core Api ">
            <label >ASP.Net Core Api</label>
        </p>
        <p>
            <input id="Swfit" type="radio" asp-for="SelectedCourse" value="Swfit ">
            <label >Swfit</label>
        </p>
    </fieldset>
    
    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Home</a>
    </div>
</form>